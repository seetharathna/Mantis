<div class="container">
	<h2>Categories
	
	
	<%if admin?%>
		<span><%= link_to 'Add new category', new_admin_category_path %> | <%= link_to 'Add subcategory', subcategory_new_admin_categories_path %></span>
	<%end%>
	</h2>

	<div id = 'category-list'>
	  <%= render :partial => 'list' %>
	</div>
</div>
<div class="sidebar">
	<h2>Category List</h2>
	 <ul id='tree'><%= render :partial => 'category_list', :collection => @parent, :as => :category %></ul>
     <div id = "banners">
       <% unless @banners.blank? %>
         <% @banners.each do |banner| %>
           <%=h banner.name %><br/>
           <%= banner.banner_image.url(:thumb) %>
           <%= link_to image_tag(banner.banner_image.url(:thumb)),banner.url,:target=>'_blank'%><br/>
           <%= link_to "Edit",edit_admin_banner_path(banner)%>
           <%= link_to 'Destroy', admin_banner_path(banner), :confirm => 'Are you sure?', :method => :delete %><br/>
         <% end %>
      <% end %>

      <% if @banners.count < 2 %>
           <% if @banners.blank? %>
              <%= image_tag('banner-placeholder.png') %><br />
              <%= link_to 'Add a new banner', new_admin_banner_path %>
           <% end %>  
            <%= image_tag('banner-placeholder.png') %><br />
            <%= link_to 'Add a new banner', new_admin_banner_path %>
          <% end %>  
    
          
     </div>
	
</div>
<div class="clear"></div>


