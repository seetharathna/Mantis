<div class="clear"></div>
<h2 class="form_heading">Users</h2>
<table class="formstyle"  cellpadding="15px;" border="1">
	<tr>
    	   <% form_tag(admin_users_path, :method => "get" )do %>
    	      <% fields_for @search do |f|%>
    		<% f.fields_for @search.conditions do |user| %>
       			<th>Search</th>
			<td><%= user.text_field :name_like   %> </td>
 		<%end%>
  	     <%end%> 
   	     <td><%=  submit_tag "Search" %></td><td><%= link_to "Reset search", admin_users_path%></td>
   	    <%end%>
	</tr>
</table>
<div id = 'dealer-list'>
	<h3>Name</h3>
  	<%=render :partial => "list"%>
</div>


