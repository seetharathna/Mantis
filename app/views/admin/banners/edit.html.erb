<div class="clear"></div>
<h2 class="form_heading">Edit banner</h2>

<% form_for([:admin,@banner],:html => { :multipart => true }) do |f| %>
  <%= f.error_messages %>
<table class="formstyle"  cellpadding="15px;" border="1">
	<tr>
		<th><%= f.label :name %></th>
    		<td><%= f.text_field :name %></td>
  	</tr>
  	<tr>
    		<th><%= f.label :image %></th>
    		<td><%= f.file_field :banner_image %></td>
  	</tr>
 	<tr>
    		<th><%= f.label :url %></th>
    		<td><%= f.text_field :url %></td>
  	</tr>
</table>
<div id="btn">
    &nbsp;&nbsp;&nbsp;<%= f.submit 'Update' %>
<% end %>
 -or- <%= link_to 'Cancel', admin_categories_path %>
</div>

