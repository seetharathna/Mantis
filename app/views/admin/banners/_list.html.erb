<h2>Banners</h1>

<table>
  <tr>
    <!--<th>Name</th>
    <th>Image</th>-->
  </tr>

<% @banners.each do |banner| %>
  <tr>
    <td><%=h banner.name %><br/>
    <%= link_to image_tag(banner.banner_image.url(:thumb)),banner.url,:target=>'_blank'%></td><br/>
    <td><%= link_to "Edit",edit_admin_banner_path(banner)%></td>
    <td><%= link_to 'Destroy', admin_banner_path(banner), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

