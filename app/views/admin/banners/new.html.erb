<h2>New banner</h2>

<% form_for([:admin,@banner],:url => admin_banners_path,:html => { :multipart => true })  do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>

   <p>
    <%= f.label :image %><br />
    <%= f.file_field :banner_image %>
   </p>
  
   <p>
    <%= f.label :url %><br />
    <%= f.text_field :url %>
    for example :(http://www.example.com)
   </p>

   <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', admin_categories_path %>
