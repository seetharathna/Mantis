		<h1>Little <span>Surprizes</span></h1>
    	</div>

	<div class="header_right">
		<%= render :partial => "shared/link" %>	
	</div>

       <%= yield  %>
</div>

<div class="clear"></div>

<script type="text/javascript">
 	jQuery(".main").corner("corner 10px");
	jQuery(".header_right").corner("corner 10px");
        jQuery(".sidebar").corner("top 10px");
        jQuery(".container").corner("top 10px");
</script>
