<% form_for([:admin,@category],:html => {:id =>'main_form'},:html => { :multipart => true }) do |f| %>
  <%= f.error_messages %>
 
 <p>
    <%= f.label :Subcategory_name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :Subcategory_description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :image %><br />
    <%= f.file_field :avatar %>
  </p>
  <p>
    <%= f.label :url %><br />
    <%= f.text_field :url %>
  </p>
  <p>
    <%= f.label :lowest_number_of_points_needed %><br />
    <%= f.text_field :lowest_number_of_points_needed %>
  </p>

  <p>
   
      <input type="hidden" id="category_parent_id", name="category[parent_id]" value="">
      <ul id='tree'>
<%= render :partial => 'child_list', :collection => @parent, :as => :category %></ul>
       <%= f.submit 'Create' %>
  </p>
<% end -%>

<%= link_to 'Back', categories_path %>
