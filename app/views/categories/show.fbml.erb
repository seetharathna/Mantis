<% content_for :categories_tab do %>
    <% unless (@current_user.wish_list.blank?) %>
       <%= fb_tab_item "#{@current_user.name}'s wishlist", wish_list_path(@wish_list.id) %>
    <% end -%>
<% end %>

<div class="facebook_container container">
   <div class="outer-box">
	<div class="box"
		<div class="heading"><%=h @category.name %></div>
		<div class="box_lt">
			<center><%= image_tag @category.avatar.url(:thumb)%></center>
		</div>
		<div class="box_rt">
 			<p><%=h @category.description %></p>
  			<a><%=h @category.url %></a>
		</div>
		<div class="points">
			Lowest number of points needed:
  			<%=h @category.lowest_number_of_points_needed %>
		</div>
	</div>
  </div>
</div>
